# Nexus Environment Configuration
# Copy this file to .env and modify the values

# Application Settings
DEBUG=true
HOST=127.0.0.1
PORT=8000
APP_NAME="Nexus Server Management"

# Security Settings (IMPORTANT: Change these in production!)
SECRET_KEY=your-secret-key-change-this-in-production-make-it-long-and-random-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.*

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/nexus.db

# AI/Ollama Configuration
AI_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
AI_MODEL_NAME=gpt-oss:20b
AI_TIMEOUT=60
MAX_REASONING_LEVEL=medium

# SSH Configuration
SSH_TIMEOUT=30
MAX_SSH_CONNECTIONS=10
SSH_KEY_PATH=

# File Paths
DATA_DIR=./data
LOGS_DIR=./data/logs

# Feature Flags
SERVE_STATIC=true
ENABLE_WEBSOCKETS=true
ENABLE_AI=true